<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/controller.css' />
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/vendor/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="/vendor/fastclick.js"></script>
    <script type="text/javascript" src="/javascripts/controller.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% for(var i=1; i<=5; i++) {%>
      <button class="btn btn-primary preset" data-preset="<%= i %>">Preset <%= i %></button>
    <% } %>
    <h2>Pan/Tilt absolute</h2>
    <form class="form-horizontal" role="form" id="pantiltabsolute">
      <div class="form-group">
        <label for="pan" class="col-sm-2 control-label">Pan (degrees, between -180째 and +180째)</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="pan" value="0">
        </div>
      </div>
      <div class="form-group">
        <label for="tilt" class="col-sm-2 control-label">Tilt (degrees, between -90째 and +90째)</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="tilt" value="0">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Set Camera position</button>
        </div>
      </div>
    </form>

  </body>
</html>
